@model IEnumerable<PropertyWeb.Models.Property_record>

@{
    ViewData["Title"] = "My Properties";
    Layout = "_OwnerLayout";
}

<div class="dashboard-header">
    <h1 class="dashboard-title">My Properties</h1>
    <p class="dashboard-subtitle">View all your registered properties.</p>
</div>

<div class="data-table">
    <div class="table-header">
        <div class="table-title">All Properties</div>
    </div>
    <div class="table-wrapper">
        <table>
                <thead>
                    <tr>
                        <th>Created</th>
                        <th>Address</th>
                        <th>Type</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.Created_at.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@p.Address_line @if (!string.IsNullOrWhiteSpace(p.Unit_label)) { @($" (Unit {p.Unit_label})") }</td>
                        <td>@p.Property_type ?? "-"</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>


