@model PropertyWeb.Models.TicketDetailViewModel
@using System.Security.Claims

@{
    ViewData["Title"] = "Ticket Details";
    Layout = "_OwnerLayout";
    var ticket = Model.Ticket;
    var currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h4 mb-1">@ticket.Title</h1>
            <p class="text-muted mb-0">Ticket #@ticket.Id.ToString().Substring(0, 8)</p>
        </div>
        <div>
            <span class="badge bg-info">@ticket.Status</span>
        </div>
    </div>

    @if (TempData["MessageSent"] is string successMsg)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @successMsg
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["MessageError"] is string errorMsg)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @errorMsg
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row g-4 mb-4">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">Ticket Information</h5>
                </div>
                <div class="card-body">
                    <p><strong>Description:</strong><br />@(string.IsNullOrWhiteSpace(ticket.Description) ? "No description provided." : ticket.Description)</p>
                    <p><strong>Status:</strong> <span class="badge bg-info">@ticket.Status</span></p>
                    <p><strong>Assigned To:</strong> @(ticket.Assigned_user?.User_name ?? "Unassigned")</p>
                    <p><strong>Property:</strong> @(ticket.Property?.Address_line ?? "-")</p>
                    <p><strong>Created:</strong> @ticket.Created_at.ToString("yyyy-MM-dd HH:mm")</p>
                    @if (!string.IsNullOrWhiteSpace(ticket.Image_url))
                    {
                        <div class="mt-3">
                            <p><strong>Attached photo:</strong></p>
                            <img src="@ticket.Image_url" alt="Ticket photo" class="img-fluid rounded border" style="max-height: 320px; object-fit: cover;" />
                            <div class="mt-2">
                                <a href="@ticket.Image_url" target="_blank" rel="noopener">Open original</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Chat Section -->
    <div class="card shadow-sm">
        <div class="card-header">
            <h5 class="mb-0">Ticket Conversation</h5>
        </div>
        <div class="card-body">
            <div id="chat-messages" style="max-height: 400px; overflow-y: auto; margin-bottom: 20px; padding: 16px; background: #f8f9fa; border-radius: 8px;">
                @if (Model.Messages.Any())
                {
                    @foreach (var message in Model.Messages)
                    {
                        var isCurrentUser = message.User_id.ToString() == currentUserId;
                        <div class="mb-3" style="display: flex; @(isCurrentUser ? "justify-content: flex-end;" : "justify-content: flex-start;")">
                            <div style="max-width: 70%; @(isCurrentUser ? "background: #0d6efd; color: white;" : "background: white; border: 1px solid #dee2e6;") padding: 12px 16px; border-radius: 8px;">
                                <div style="font-size: 12px; font-weight: 600; margin-bottom: 4px;">
                                    @message.User?.User_name (@message.User?.Role)
                                </div>
                                <div>@message.Message_text</div>
                                <div style="font-size: 11px; margin-top: 4px; opacity: 0.7;">
                                    @message.Created_at.ToString("MMM dd, yyyy HH:mm")
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-center text-muted">No messages yet. Start the conversation!</p>
                }
            </div>

            <form asp-action="SendMessage" method="post">
                <input type="hidden" name="ticketId" value="@ticket.Id" />
                <div class="input-group">
                    <input type="text" name="messageText" class="form-control" placeholder="Type your message here..." required />
                    <button type="submit" class="btn btn-primary">Send</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function scrollToBottom() {
            const chatMessages = document.getElementById('chat-messages');
            if (chatMessages) {
                chatMessages.scrollTop = chatMessages.scrollHeight;
            }
        }
        document.addEventListener('DOMContentLoaded', scrollToBottom);
    </script>
}

