@model PropertyWeb.Models.OwnerProfileViewModel

@{
    ViewData["Title"] = "My profile";
    Layout = "_AppLayout";
}

<div class="container py-5">
    <h1 class="h4 mb-4">My profile</h1>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title mb-3">Account details</h5>
                    <p class="mb-2"><strong>Name</strong><br />@Model.User.User_name</p>
                    <p class="mb-2"><strong>Email</strong><br />@Model.User.Email</p>
                    <p class="mb-0"><strong>Phone</strong><br />@Model.User.Phone ?? "-"</p>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <h5 class="card-title mb-3">Overview</h5>
                    <p class="mb-1">Properties registered: <strong>@Model.Properties.Count()</strong></p>
                    <p class="mb-0">Tickets submitted: <strong>@Model.TicketCount</strong></p>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-3">My properties</h5>
                    <table class="table table-sm table-striped align-middle mb-0">
                        <thead>
                            <tr>
                                <th>Created</th>
                                <th>Address</th>
                                <th>Type</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var p in Model.Properties)
                        {
                            <tr>
                                <td>@p.Created_at.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>@p.Address_line @if (!string.IsNullOrWhiteSpace(p.Unit_label)) { @($" (Unit {p.Unit_label})") }</td>
                                <td>@p.Property_type ?? "-"</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


