@model PropertyWeb.Models.OwnerProfileViewModel

@{
    ViewData["Title"] = "My Profile";
    Layout = "_OwnerLayout";
}

<div class="dashboard-header">
    <h1 class="dashboard-title">My Profile</h1>
    <p class="dashboard-subtitle">View your account details and properties.</p>
</div>

<div class="dashboard-grid" style="grid-template-columns: 1fr 2fr;">
    <div class="data-table">
        <div class="table-header">
            <div class="table-title">Account Details</div>
        </div>
        <div style="padding: 24px;">
            <div style="margin-bottom: 20px;">
                <strong>Name:</strong><br />
                <span>@Model.User.User_name</span>
            </div>
            <div style="margin-bottom: 20px;">
                <strong>Email:</strong><br />
                <span>@Model.User.Email</span>
            </div>
            <div style="margin-bottom: 20px;">
                <strong>Phone:</strong><br />
                <span>@(Model.User.Phone ?? "-")</span>
            </div>
            <div style="padding-top: 20px; border-top: 1px solid var(--admin-border);">
                <strong>Properties:</strong> @Model.Properties.Count()<br />
                <strong>Tickets:</strong> @Model.TicketCount
            </div>
        </div>
    </div>

    <div class="data-table">
        <div class="table-header">
            <div class="table-title">My Properties</div>
        </div>
        <div class="table-wrapper">
            <table>
                        <thead>
                            <tr>
                                <th>Created</th>
                                <th>Address</th>
                                <th>Type</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var p in Model.Properties)
                        {
                            <tr>
                                <td>@p.Created_at.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>@p.Address_line @if (!string.IsNullOrWhiteSpace(p.Unit_label)) { @($" (Unit {p.Unit_label})") }</td>
                                <td>@p.Property_type ?? "-"</td>
                            </tr>
                        }
                        </tbody>
            </table>
        </div>
    </div>
</div>


