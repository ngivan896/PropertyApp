@model IEnumerable<PropertyWeb.Models.Repair_ticket>

@{
    ViewData["Title"] = "My Tickets";
    Layout = "_OwnerLayout";
}

<div class="dashboard-header">
    <div style="display: flex; justify-content: space-between; align-items: center;">
        <div>
            <h1 class="dashboard-title">My Tickets</h1>
            <p class="dashboard-subtitle">Track repair tickets you have submitted.</p>
        </div>
        <a asp-action="NewTicket" class="btn-primary">New Ticket</a>
    </div>
</div>

<div class="data-table">
    <div class="table-header">
        <div class="table-title">All Tickets</div>
    </div>
    <div class="table-wrapper">
        <table>
                <thead>
                    <tr>
                        <th>Created</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>Property</th>
                        <th>Assigned to</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var ticket in Model)
                {
                    <tr>
                        <td>@ticket.Created_at.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@ticket.Title</td>
                        <td>@(string.IsNullOrWhiteSpace(ticket.Description) ? "-" : (ticket.Description.Length > 50 ? ticket.Description.Substring(0, 50) + "..." : ticket.Description))</td>
                        <td>@ticket.Status</td>
                        <td>@ticket.Property?.Address_line ?? "-"</td>
                        <td>@ticket.Assigned_user?.User_name ?? "-"</td>
                        <td class="text-end">
                            <a asp-action="ViewTicket" asp-route-id="@ticket.Id" class="btn-primary" style="padding: 6px 16px; font-size: 13px;">View</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>


