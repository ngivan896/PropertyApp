@model IEnumerable<PropertyWeb.Models.Repair_ticket>

@{
    ViewData["Title"] = "My Tickets";
    Layout = "_WorkerLayout";
}

<div class="dashboard-header">
    <h1 class="dashboard-title">My Assigned Tickets</h1>
    <p class="dashboard-subtitle">View and manage tickets assigned to you.</p>
</div>

<div class="data-table">
    <div class="table-header">
        <div class="table-title">All Tickets</div>
    </div>
    <div class="table-wrapper">
        <table>
                <thead>
                    <tr>
                        <th>Created</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>Property</th>
                        <th>Owner</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var t in Model)
                {
                    <tr>
                        <td>@t.Created_at.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@t.Title</td>
                        <td>@(string.IsNullOrWhiteSpace(t.Description) ? "-" : (t.Description.Length > 50 ? t.Description.Substring(0, 50) + "..." : t.Description))</td>
                        <td>@t.Status</td>
                        <td>@t.Property?.Address_line ?? "-"</td>
                        <td>@t.Owner?.User_name ?? "-"</td>
                        <td class="text-end">
                            <a asp-action="ViewTicket" asp-route-id="@t.Id" class="btn-primary" style="padding: 6px 16px; font-size: 13px; margin-right: 8px;">View</a>
                            <a asp-action="EditTicket" asp-route-id="@t.Id" class="btn-outline" style="padding: 6px 16px; font-size: 13px;">Update</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>


